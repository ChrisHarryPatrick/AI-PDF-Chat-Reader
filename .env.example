# LLM (set either OpenAI or rely on local Ollama)
OPENAI_API_KEY=

# Models
OPENAI_MODEL=gpt-4o-mini
OLLAMA_MODEL=mistral

# Vector DB selection: faiss | qdrant
VECTOR_DB=faiss

# Embeddings & reranker
BGE_EMBEDDING_MODEL=BAAI/bge-m3
RERANKER_MODEL=BAAI/bge-reranker-v2-m3

# Qdrant settings (if VECTOR_DB=qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=company_rag

# Retrieval
TOP_K=8
CANDIDATE_K=24
